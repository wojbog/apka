<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_marginBottom="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?attr/buttonNormalColor">

        <TextView
            android:id="@+id/nad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="49dp"
            android:layout_marginTop="18dp"
            android:text="@string/przykladowe_slowko"
            android:textColor="?attr/primaryTextColor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="49dp" />

        <TextView
            android:id="@+id/pod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="52dp"
            android:text="@string/przykladowe_tlumaczenie"
            android:textColor="?attr/primaryTextColor"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="55dp" />

        <TextView
            android:id="@+id/numerek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="257dp"
            android:layout_marginLeft="257dp"
            android:layout_marginTop="53dp"
            android:text="@string/jakias_kategoria"
            android:textColor="?attr/primaryTextColor" />

        <TextView
            android:id="@+id/zolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="263dp"
            android:layout_marginLeft="263dp"
            android:layout_marginTop="17dp"
            android:text="@string/stopie_nauczenia_2"
            android:textColor="?attr/primaryTextColor" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>