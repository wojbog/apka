<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".KartkowkaFragment"
    tools:showIn="@layout/fragment_kartkowka">

    <TextView
        android:id="@+id/slowkoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:text="@string/jakie_slowko"
        android:textAlignment="center"
        android:textSize="55sp"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tlumaczenieET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="8dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/podaj_tlumaczenie"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bn_sprawdz"
        android:layout_width="207dp"
        android:layout_height="75dp"
        android:background="@drawable/buttonshape"
        android:textColor="@color/primaryTextColor"
        android:textSize="30sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="8dp"
        android:text="@string/zatwierdz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dobrychNapis"
        android:layout_width="199dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/kartkowkaGreen"
        android:text="@string/dobrych_odpowiedzi"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/slowkoTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/zlychNapis"
        android:layout_width="212dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/kartkowkaRed"
        android:text="@string/zlych_odpowiedzi"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/slowkoTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/zlychTV"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:background="@color/kartkowkaRed"
        android:text="@string/_11"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/slowkoTV"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dobrychTV"
        android:layout_width="199dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:background="@color/kartkowkaGreen"
        android:text="@string/_34"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/slowkoTV"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/odw"
        android:layout_width="142dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="512dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/buttonshape"
        android:textColor="@color/primaryTextColor"
        android:text="Zmień języki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>