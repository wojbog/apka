<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/adduser"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="a.b.TEA.AddUserFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserratregular"
        android:text="@string/dodaj_slowko"
        android:textAlignment="center"
        android:textColor="?attr/primaryTextColor"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameofimie"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:fontFamily="@font/montserratregular"
        android:inputType="textPersonName"
        android:text="@string/slowko"
        android:textColor="?attr/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/surnameofnazwisko"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="204dp"
        android:ems="10"
        android:fontFamily="@font/montserratregular"
        android:inputType="textPersonName"
        android:text="@string/tlumaczenie"
        android:textColor="?attr/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/zobacz_category"
        android:layout_width="286dp"
        android:layout_height="60dp"
        android:layout_marginTop="372dp"
        android:fontFamily="@font/montserratregular"
        android:gravity="center"
        android:text="@string/jakias_kategoria"
        android:textAlignment="center"
        android:textColor="?attr/primaryTextColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/zapisz"
        android:layout_width="256dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/buttonshape"
        android:fontFamily="@font/montserratregular"
        android:text="@string/zapisz"
        android:textColor="?attr/primaryTextColor"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

