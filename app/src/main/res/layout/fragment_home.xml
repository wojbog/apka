<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/bn_view_users"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttonshape"
                android:text="Przejrzyj słówka"
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/bn_kartkowka"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bn_kartkowka"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttonshape"
                android:text="Kartkówka"
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/bn_fiszki"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bn_view_users" />

            <Button
                android:id="@+id/bn_fiszki"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttonshape"
                android:text="Fiszki"
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bn_kartkowka" />

            <Button
                android:id="@+id/add"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttonshape"
                android:text="dodaj kategorię"
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bn_fiszki" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>