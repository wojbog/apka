<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bn_view_users"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="72dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/buttonshape"
                android:text="Przejrzyj słówka"
                android:textColor="#FBFF85"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bn_kartkowka"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="284dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/buttonshape"
                android:text="Kartkówka"
                android:textColor="#FBFF85"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bn_delete"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="188dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/buttonshape"
                android:text="Usuń słówka"
                android:textColor="#FBFF85"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bn_fiszki"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="388dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/buttonshape"
                android:text="Fiszki"
                android:textColor="#FBFF85"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/add"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="496dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/buttonshape"
                android:text="dodaj kategorię"
                android:textColor="#FBFF85"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>