<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bn_add_user"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="8dp"
                android:text="Dodaj słówka"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bn_view_users"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="135dp"
                android:layout_marginEnd="8dp"
                android:text="Przejrzyj słówka"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bn_kartkowka"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="335dp"
                android:layout_marginEnd="8dp"
                android:text="Kartkówka"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bn_delete"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="235dp"
                android:layout_marginEnd="8dp"
                android:text="Usuń słówka"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bn_fiszki"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="435dp"
                android:layout_marginEnd="8dp"
                android:text="Fiszki"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/add"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="535dp"
                android:layout_marginEnd="8dp"
                android:text="dodaj kategorię"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/zobacz_category"
                android:layout_width="205dp"
                android:layout_height="85dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="635dp"
                android:layout_marginEnd="8dp"
                android:text="zobacz kategorie"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>