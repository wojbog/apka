<set
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/linear_interpolator"
    android:fillAfter="true">

    <translate
        android:fromXDelta="0%p"
        android:toXDelta="10%p"
        android:fillAfter="true"
        android:duration="50" />

    <translate
        android:fromXDelta="0%p"
        android:toXDelta="-10%p"
        android:fillAfter="true"
        android:startOffset="50"
        android:duration="50" />
</set>