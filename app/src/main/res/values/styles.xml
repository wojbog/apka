<resources>
    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">@color/secondaryDarkColorPom</item>
        <item name="android:statusBarColor">@color/secondaryDarkColorPom</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/buttonBackground</item>
        <item name="primaryTextColor">@color/primaryTextColor</item>
        <item name="buttonNormalColor">@color/buttonBackground</item>
        <item name="android:windowBackground">@color/secondaryDarkColor</item>
        <item name="android:navigationBarColor">@color/secondaryDarkColor</item>
        <item name="android:statusBarColor">@color/secondaryDarkColor</item>
    </style>

    <style name="AppTheme.pomaranczowy">
        <item name="colorPrimary">@color/primaryColorPom</item>
        <item name="colorPrimaryDark">@color/primaryDarkColorPom</item>
        <item name="colorAccent">@color/buttonBackgroundPom</item>
        <item name="primaryTextColor">@color/primaryTextColorPom</item>
        <item name="buttonNormalColor">@color/buttonBackgroundPom</item>
        <item name="android:windowBackground">@color/secondaryDarkColorPom</item>
        <item name="android:navigationBarColor">@color/secondaryDarkColorPom</item>
        <item name="android:statusBarColor">@color/secondaryDarkColorPom</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
